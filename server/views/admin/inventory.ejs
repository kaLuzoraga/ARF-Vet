<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <title>Inventory - ARF Vet Shop</title>
  <link rel="stylesheet" href="/css/admin/inventory.css" />
</head>

<body>
  <!-- Sidebar Partial -->
  <%- include('../partials/adminsidebar') %>

  <div class="page-wrapper">

    <main class="main-content">
      <div class="header">
        <h1>Inventory</h1>
        <button class="btn-add" onclick="addItem()">+ Add New Product</button>
      </div>

      <div class="category">
        <h2>Available Items</h2>
        <div class="items-wrapper" id="inventory-list">
          <!-- Dynamic inventory items will be rendered here by JS -->
        </div>
      </div>
    </main>

    <!-- Footer Partial -->
    <%- include('../partials/adminfooter') %>

  </div>

  <!-- Modal Form -->
  <div id="item-modal" class="modal hidden">
    <div class="modal-content">
      <h2 id="modal-title">Add New Product</h2>
      <form id="item-form" enctype="multipart/form-data">
        <input type="hidden" id="item-id" name="id" />

        <label for="product-name">Product Name *</label>
        <input type="text" id="product-name" name="name" required />

        <label for="product-description">Description *</label>
        <textarea id="product-description" name="description" required></textarea>

        <label for="product-price">Price (â‚±) *</label>
        <input type="number" id="product-price" name="price" required min="0" step="0.01" />

        <label for="product-stock">Stock Quantity</label>
        <input type="number" id="product-stock" name="stock" min="0" value="0" />

        <label for="product-image">Image *</label>
        <input type="file" id="product-image" name="image" accept="image/*" />

        <button type="submit" class="btn-save">Save</button>
        <button type="button" class="btn-cancel" onclick="closeModal()">Cancel</button>
      </form>
    </div>
  </div>

  <script src="/js/admin/inventory.js"></script>
</body>
</html>