<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <title>Users - ARF Vet Shop</title>
  <link rel="stylesheet" href="/css/admin/users.css">
</head>

<body>
  <div class="admin-wrapper">
    
    <!-- Sidebar Partial -->
    <%- include('../partials/adminsidebar') %>

    <div class="main-area">
      <main class="main-content">
        <div class="header">
          <h1>User Management</h1>
          <button class="btn-primary" id="addUserBtn">Add New User</button>
        </div>

        <!-- Admin Accounts Table -->
        <section class="category">
          <h2>Admin Accounts</h2>
          <table>
            <thead>
              <tr><th>Name</th><th>Email</th><th>Role</th><th>Actions</th></tr>
            </thead>
            <tbody id="admin-table">
              <!-- Populated dynamically by JS -->
            </tbody>
          </table>
        </section>

        <!-- Customer Accounts Table -->
        <section class="category">
          <h2>Customer Accounts</h2>
          <table>
            <thead>
              <tr><th>Name</th><th>Email</th><th>Role</th><th>Actions</th></tr>
            </thead>
            <tbody id="customer-table">
              <!-- Populated dynamically by JS -->
            </tbody>
          </table>
        </section>
      </main>

      <!-- Footer Partial -->
      <%- include('../partials/adminfooter') %>
    </div>
  </div>

  <!-- Modal for Add/Edit User -->
  <div id="userModal" class="modal">
    <div class="modal-content">
      <span class="close-btn" id="closeModal">&times;</span>
      <h2 id="modalTitle">Add User</h2>
      <form id="userForm">
        <input type="hidden" id="userId" />
        
        <label for="name">Full Name</label>
        <input type="text" id="name" required />

        <label for="email">Email</label>
        <input type="email" id="email" required />

        <label for="password">Password</label>
        <input type="password" id="password" required />

        <label for="confirmPassword">Confirm Password</label>
        <input type="password" id="confirmPassword" required />

        <label for="address">Address</label>
        <input type="text" id="address" required />

        <label for="phone">Phone Number</label>
        <input type="tel" id="phone" pattern="09[0-9]{9}" placeholder="09XXXXXXXXX" required />

        <label for="role">Role</label>
        <select id="role" required>
          <option value="admin">Admin</option>
          <option value="user">Customer</option>
        </select>

        <button type="submit" class="btn-primary" id="saveBtn">Save</button>
      </form>
    </div>
  </div>

  <script src="/js/admin/users.js"></script>
</body>
</html>
