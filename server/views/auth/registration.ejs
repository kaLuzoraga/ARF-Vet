<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sign Up - ARF Vet</title>
  <link rel="stylesheet" href="/css/registration.css">
  <script src="https://kit.fontawesome.com/f5623676d7.js" crossorigin="anonymous"></script>
</head>
<body>
  <div id="logo">
    <img src="/assets/Logo.jpg" alt="ARF Logo" />
  </div>

  <div class="form-wrapper">
    <h2>Sign Up</h2>
    <form id="signup-form" onsubmit="signup(event)">
      <input type="text" id="signup-email" placeholder="Email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" required />
      <div class="error-msg" id="error-email"><%= typeof errorEmail !== 'undefined' ? errorEmail : '' %></div>

      <input type="password" id="signup-password" placeholder="Password" name="password" required />
      <div class="error-msg" id="error-password"><%= typeof errorPassword !== 'undefined' ? errorPassword : '' %></div>

      <input type="password" id="confirm-password" placeholder="Confirm Password" name="confirmPassword" required />
      <div class="error-msg" id="error-confirm"><%= typeof errorConfirm !== 'undefined' ? errorConfirm : '' %></div>

      <input type="text" id="signup-name" placeholder="Full Name" name="fullName" value="<%= typeof fullName !== 'undefined' ? fullName : '' %>" required />
      <div class="error-msg" id="error-name"><%= typeof errorName !== 'undefined' ? errorName : '' %></div>

      <input type="text" id="signup-address" placeholder="Address" name="address" value="<%= typeof address !== 'undefined' ? address : '' %>" required />
      <div class="error-msg" id="error-address"><%= typeof errorAddress !== 'undefined' ? errorAddress : '' %></div>

      <input type="text" id="signup-phone" placeholder="Phone Number" name="phone" value="<%= typeof phone !== 'undefined' ? phone : '' %>" required />
      <div class="error-msg" id="error-phone"><%= typeof errorPhone !== 'undefined' ? errorPhone : '' %></div>

      <button type="submit">Sign Up</button>
    </form>
    <div class="toggle-link">
      Already have an account? <a href="/auth/login">Login</a>
    </div>
  </div>

