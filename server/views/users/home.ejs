<!DOCTYPE html>
<html lang="en">
    <head>
    <%- include('../partials/head') %>
    <title>Home - ARF Vet Shop</title>
    <link rel="stylesheet" href="../css/users/homepage.css">
    </head>
    <body>
        <%- include('../partials/navbar') %>

        <section class="hero">
            <div class="hero-text">
                <h1>Healthy Pets, Happy Life</h1>
                <p>Shop premium vitamins and medications for your furry friends.</p>
                <a href="/products" class="btn">Shop Now</a>
            </div>
        </section>

<section class="products">
    <h2>Featured Products</h2>
    <div class="product-grid">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="product-card">
                    <img src="<%= product.image || '/img/default.jpg' %>" alt="<%= product.name %>">
                    <h3><%= product.name %></h3>
                    <p>â‚±<%= product.price.toFixed(2) %></p>
                    <a href="/products/<%= product._id %>" class="btn view-item-btn">View Item</a>
                </div>
            <% }) %>
        <% } else { %>
            <p style="text-align:center;">No products available yet.</p>
        <% } %>
    </div>
</section>

        <%- include('../partials/footer') %>
    </body>
</html>
