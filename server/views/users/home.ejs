<!DOCTYPE html>
<html lang="en">
    <head>
    <%- include('../partials/head') %>
    <title>Home - ARF Vet Shop</title>
    <link rel="stylesheet" href="../css/users/homepage.css">
    </head>
    <body>
        <%- include('../partials/navbar') %>

        <!-- Hero Banner -->
        <section class="hero">
            <div class="hero-text">
                <h1>Premium Pet Care Products</h1>
                <p>Shop the best vitamins, medications, and supplements for your furry friends</p>
                <a href="/products" class="btn-shop">Shop All Products</a>
            </div>
        </section>

        <!-- Categories Section -->
        <section class="categories">
            <h2>Shop by Category</h2>
            <div class="category-grid">
                <a href="/products?category=Vitamins%20%26%20Supplements" class="category-card">
                    <i class="fas fa-pills"></i>
                    <h3>Vitamins & Supplements</h3>
                    <p>Boost your pet's health</p>
                </a>
                <a href="/products?category=Medications" class="category-card">
                    <i class="fas fa-capsules"></i>
                    <h3>Medications</h3>
                    <p>Trusted treatments</p>
                </a>
                <a href="/products?category=Nutrition" class="category-card">
                    <i class="fas fa-bone"></i>
                    <h3>Nutrition</h3>
                    <p>Healthy pet food</p>
                </a>
                <a href="/products?category=Wellness" class="category-card">
                    <i class="fas fa-heart"></i>
                    <h3>Wellness</h3>
                    <p>Complete care solutions</p>
                </a>
            </div>
        </section>

        <!-- Featured Products -->
        <section class="products">
            <h2>Featured Products</h2>
            <div class="product-grid">
                <% if (products && products.length > 0) { %>
                    <% products.slice(0, 8).forEach(product => { %>
                        <div class="product-card">
                            <div class="product-image-wrapper">
                                <img src="<%= product.image || '/img/default.jpg' %>" alt="<%= product.name %>">
                                <% if (product.stock === 0) { %>
                                    <div class="out-of-stock-overlay">
                                        <span>OUT OF STOCK</span>
                                    </div>
                                <% } else if (product.stock < 10) { %>
                                    <div class="low-stock-badge">Only <%= product.stock %> left!</div>
                                <% } %>
                            </div>
                            <h3><%= product.name %></h3>
                            <p class="price">â‚±<%= product.price.toFixed(2) %></p>
                            <a href="/products/<%= product._id %>" class="btn view-item-btn">View Details</a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p style="text-align:center;">No products available yet.</p>
                <% } %>
            </div>
            <% if (products && products.length > 8) { %>
                <div class="view-all">
                    <a href="/products" class="btn-view-all">View All Products</a>
                </div>
            <% } %>
        </section>

        <!-- Why Shop With Us -->
        <section class="features">
            <h2>Why Shop With Us?</h2>
            <div class="features-grid">
                <div class="feature-card">
                    <i class="fas fa-shield-alt"></i>
                    <h3>Quality Guaranteed</h3>
                    <p>100% authentic products</p>
                </div>
                <div class="feature-card">
                    <i class="fas fa-shipping-fast"></i>
                    <h3>Fast Delivery</h3>
                    <p>Quick and reliable shipping</p>
                </div>
                <div class="feature-card">
                    <i class="fas fa-tag"></i>
                    <h3>Best Prices</h3>
                    <p>Competitive pricing guaranteed</p>
                </div>
                <div class="feature-card">
                    <i class="fas fa-headset"></i>
                    <h3>24/7 Support</h3>
                    <p>We're here to help</p>
                </div>
            </div>
        </section>

        <%- include('../partials/footer') %>
    </body>
</html>
