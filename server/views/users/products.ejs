<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
    <title>Our Products</title>
    <link rel="stylesheet" href="../css/users/products.css" />
</head>

<body>
  <!-- Navbar Partial -->
  <%- include('../partials/navbar') %>

    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-text">
        <h1>Our Products</h1>
        <p>Browse the full collection of veterinary items we offer.</p>
      </div>
    </section>

    <!-- Product Grid -->
    <section class="products">
      <h2>All Products</h2>
      <div class="product-grid">
        <% if (products && products.length> 0) { %>
          <% products.forEach(product=> { %>
            <a href="/products/<%= product._id %>" class="product-card-link">
              <div class="product-card">
                <img src="<%= product.image || '/img/default.jpg' %>" alt="<%= product.name %>">
                <h3>
                  <%= product.name %>
                </h3>
                <p>â‚±<%= product.price.toFixed(2) %>
                </p>
                <p>
                  <%= product.description %>
                </p>
                <p><strong>Stock:</strong>
                  <%= product.stock %>
                </p>
                <button>View Item</button>
              </div>
            </a>
            <% }) %>
              <% } else { %>
                <p style="text-align:center;">No products available yet.</p>
                <% } %>
      </div>
    </section>

    <!-- Footer Partial -->
    <%- include('../partials/footer') %>
</body>

</html>