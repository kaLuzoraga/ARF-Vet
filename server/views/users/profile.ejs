<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="/server/css/users/profile.css" />
</head>

<body>
  <%- include('partials/navbar') %>

  <main>
    <div class="profile-wrapper">
      <div class="profile-left">
        <img src="<%= user.profileImage || 'https://via.placeholder.com/150' %>" alt="Profile Picture" class="profile-img" />
      </div>
      <div class="profile-right">
        <form id="profileForm">
          <div class="form-group">
            <label for="name">Full Name</label>
            <input type="text" id="name" value="<%= user.name %>" disabled />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" value="<%= user.email %>" disabled />
          </div>
          <div class="form-group">
            <label for="address">Address</label>
            <input type="text" id="address" value="<%= user.address %>" disabled />
          </div>
          <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="text" id="phone" value="<%= user.phone %>" disabled />
          </div>
          <div class="btn-group">
            <button type="button" class="btn primary" id="editBtn">Edit Profile</button>
            <button type="submit" class="btn success" id="saveBtn" style="display: none;">Save</button>
          </div>
        </form>
      </div>
    </div>

    <section class="order-status-section">
      <h2>My Orders</h2>
      <% if (orders.length === 0) { %>
        <p>No orders yet.</p>
      <% } else { %>
        <% orders.forEach(order => { %>
          <div class="order-card">
            <p><strong>Order #<%= order.orderNumber %></strong></p>
            <p>Placed: <%= order.date %></p>
            <p>Status: 
              <span class="status <%= order.status.toLowerCase() %>">
                <%= order.status %>
              </span>
            </p>
          </div>
        <% }); %>
      <% } %>
    </section>
  </main>

  <%- include('partials/footer') %>
  <script src="/server/js/profile.js"></script>
</body>

</html>
